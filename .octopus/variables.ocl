variable "container_app_name" {
    value "uat-ui" {
        description = ""
        environment = ["uat"]
    }

    value "prod-ui" {
        description = ""
        environment = ["prod"]
    }

    value "tdd-ui" {
        description = ""
        environment = ["tdd"]

