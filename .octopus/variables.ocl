        environment = ["uat", "prod"]
    }

    value "onion-architecture-dotnet-7-containers-#{Octopus.Release.Number}" {
        description = ""
        environment = ["tdd"]

        prompt {
            description = ""
            label = "Name of the TDD resource group"
        }
